<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 로그 파일 저장 경로 (application.yml에서 오버라이드 가능) -->
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="LOG_FILE_NAME" value="customer-api"/>

    <!-- Console Appender (모든 환경에서 사용) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- File Appender (일 단위 롤링, 30일 보관) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <!-- 일 단위 롤링 정책 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 롤링된 파일 이름 패턴 -->
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 최대 30일 보관 -->
            <maxHistory>30</maxHistory>
            <!-- 전체 로그 파일 크기 제한 (선택사항, 10GB) -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>

        <!-- 로그 파일이 특정 크기를 초과하면 롤링 (선택사항, 100MB) -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- Error 전용 파일 (에러 로그 별도 관리) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async Appender (성능 향상을 위한 비동기 로깅) -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- 프로필별 로그 레벨 설정 -->

    <!-- local 프로필: 개발 환경 (DEBUG 레벨, 상세 로그 활성화) -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>

        <!-- 프로젝트 패키지 DEBUG (개발 중 상세 로그) -->
        <logger name="com.groom.store" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </logger>

        <!-- Spring Framework -->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.web" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>

        <!-- Hibernate/JPA (SQL + 파라미터 바인딩) -->
        <logger name="org.hibernate" level="INFO"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>  <!-- Hibernate 6.x SQL 파라미터 바인딩 -->
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>  <!-- Hibernate 5.x 호환 -->
    </springProfile>

    <!-- dev 프로필: 개발 서버 (DEBUG 레벨) -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>

        <!-- 프로젝트 패키지 DEBUG -->
        <logger name="com.groom.store" level="DEBUG"/>

        <!-- 외부 라이브러리 INFO -->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate" level="INFO"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
    </springProfile>

    <!-- test 프로필: 테스트 환경 (INFO 레벨) -->
    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>

        <!-- 프로젝트 패키지 INFO -->
        <logger name="com.groom.store" level="INFO"/>

        <!-- 외부 라이브러리 WARN -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>

    <!-- staging 프로필: 스테이징 환경 (INFO 레벨) -->
    <springProfile name="staging,stage">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>

        <!-- 프로젝트 패키지 INFO -->
        <logger name="com.groom.store" level="INFO"/>

        <!-- 외부 라이브러리 WARN -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>

    <!-- prod 프로필: 프로덕션 환경 (INFO 레벨, 성능 최적화) -->
    <springProfile name="prod,production">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>

        <!-- 프로젝트 패키지 INFO (비즈니스 로직 추적) -->
        <logger name="com.groom.store" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </logger>

        <!-- Spring Framework (WARN 레벨로 필수 로그만) -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.springframework.security" level="WARN"/>

        <!-- Hibernate/JPA (SQL 로그 비활성화, 성능 최적화) -->
        <logger name="org.hibernate" level="WARN"/>
        <logger name="org.hibernate.SQL" level="OFF"/>  <!-- SQL 로그 완전 비활성화 -->
        <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>
        <logger name="org.hibernate.type.descriptor.sql" level="OFF"/>
    </springProfile>

    <!-- 프로필이 지정되지 않은 경우 기본 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </root>
</configuration>
